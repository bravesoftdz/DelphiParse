unit DelphiParse.Utils;

interface

function SepElements(Separator: String; Elements: Array of string): string;

implementation

uses System.SysUtils;

function SepElements(Separator: String; Elements: Array of string): string;
var
  NewArray: Array of string;
  I, ArrayLength: Integer;
begin
  if Length(Elements) = 0 then
  begin
    Result := '';
    Exit;
  end;
  ArrayLength := 0;
  for I := Low(Elements) to High(Elements) do
  begin
    if Elements[I] = '' then
      Continue;
    Inc(ArrayLength);
    SetLength(NewArray, ArrayLength);
    NewArray[ArrayLength] := Elements[I];
  end;
  Result := String.Join(Separator, NewArray);
end;

end.
